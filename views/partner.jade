extends layout

block content
  div(class="back") 
    a(href='/') 
      img(src="/images/icons8-home.svg" style="height:30px")
  .card
    img.card-img-top(src=partner.orgCoverPhoto style="background:blue;min-width:100%;min-height:300px;" )
    div(style="width:100px;height:100px;border-radius:100px;position:absolute;top:100px;left:40px;background:#ccc;text-align:center;overflow:hidden;")
      img(src=partner.profilePic style="width:100%;")
    .card-body
      h5.card-title=partner.name
      p.card-text=partner.about  
      p.card-text 
        b Category : 
        span=partner.category    
      p.card-text
        b Address : 
        span=partner.address
      p.card-text
        b City : 
        span=partner.city
      p.card-text
        b Website : 
        span=partner.websiteLink
      p.card-text
        b State : 
        span=partner.state
      p.card-text
        b Name : 
        span=partner.name
      p.card-text
        b Coordinates : 
        span=partner.locationCoordinates
      p.card-text
        b Bio : 
        span=partner.orgBio
      p.card-text
        b Category : 
        span=partner.orgCoverPhoto
      p.card-text
        b Phone : 
        span=partner.partnerContactNo
      p.card-text
        b Email : 
        span=partner.partnerEmail